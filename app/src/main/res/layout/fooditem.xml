<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@color/orangeyellow">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/p02"
        android:layout_gravity="left"
        />
    <LinearLayout android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fooditem_TV_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="abc"
            android:textSize="35dp"/>
        <TextView
            android:id="@+id/fooditem_TV_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/fooditem_TV_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="abc"
            android:textSize="20dp"
            android:textColor="@color/red"/>
    </LinearLayout>
</LinearLayout>

</LinearLayout>