<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".p06_shopmenu">
<TextView
    android:id="@+id/p06_tv_kitchenname"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:text="ABC kitchen"
    android:textSize="30dp"
    android:gravity="center"/>
    <ImageButton
        android:layout_marginLeft="5dp"
        android:id="@+id/p06_ib_favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="10dp"
         app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="230dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton

        android:id="@+id/p06_ib_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"

    android:layout_marginTop="50dp"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/p06_iv_kitchenimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/avatar"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/p06_tv_kitchenname2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Kitchen name"
        android:textSize="30dp"/>

            <ListView
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:layout_width="match_parent"
                android:scrollX="0px"
                android:scrollY="0px"
                android:layout_height="300dp"
                android:id="@+id/p06_lv_food"/>



</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>