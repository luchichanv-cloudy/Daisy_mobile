<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".ui.home.HomeFragment">



    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/orangeyellow">
        <EditText
            android:layout_width="321dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_editext"
            android:backgroundTint="#E5E5E5"
            android:hint="Search for food or restaurant"
            android:textAlignment="center"
            />
        <ImageButton
            android:id="@+id/ib_p04_search"
            android:background="@color/orangeyellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_search_foreground"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="124dp"
            />
        <!-- more attributes ... -->
        />

    </LinearLayout>
    <ImageView
        android:id="@+id/p04_png"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:src="@drawable/p04"
        app:layout_constraintTop_toBottomOf="@+id/ll"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_reccomend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:text="  Recommend"
        android:textColor="@color/orangeyellow"
        app:layout_constraintTop_toBottomOf="@+id/p04_png"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>