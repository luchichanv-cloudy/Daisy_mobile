<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".p03_signup"
    android:background="@color/orangeyellow">
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:textSize="60sp"
            android:textColor="#FFE120"
            />
        <EditText
            android:id="@+id/p03_et_name"
            android:layout_marginTop="200px"
            android:layout_gravity="center"
            android:layout_width="321dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:background="@drawable/rounded_editext"
            android:hint="Name"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/p03_et_email"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            android:layout_width="321dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:background="@drawable/rounded_editext"
            android:hint="Email"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/p03_et_password"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            android:layout_width="321dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:background="@drawable/rounded_editext"
            android:hint="Password"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/p03_et_address"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            android:layout_width="321dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:background="@drawable/rounded_editext"
            android:hint="Address"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/p03_et_phonenumber"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            android:layout_width="321dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:background="@drawable/rounded_editext"
            android:hint="Phone number"
            android:textSize="16sp"/>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:buttonTint="@color/white"
                android:id="@+id/radio_a"
                android:text="Users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"/>

            <RadioButton
                android:id="@+id/radio_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Kitchens"
                android:textSize="24sp" />


        </RadioGroup>
        <Button
            android:id="@+id/p03_btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="60px"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>
    <ProgressBar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/p03_progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>